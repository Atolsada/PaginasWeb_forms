doctype
html(lang=idioma)
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title= titulo
    body
        h1 Pug Avanzado.

        //- Lógica mediante JS
        -let nombre = "Pepe"
        //-let nombre = "María"
        -if (nombre === 'Pepe') {
            p Hola otra vez, Pepe
        - } else {
            p Hola #{nombre}, ¿donde está Pepe?
        - }

        //- Logica nativa (build-in) Pug

        //- Condicional IF

        //- nombre = "Pepe"
        - nombre = "María"
        if (nombre === 'Pepe') 
            p Hola otra vez, Pepe
        else
            p Hola #{nombre}, ¿donde está Pepe?

        //- Condicional CASE
        //- Case sustituye - switch  when sustituye - case.
        //- default - cualquier otra cosa que no cumpla los casos anteriores

        //- name = "Pepe"
        //- name = "Alicia"
        - name = "Juan"
        case name
            when "Pepe"
                p Hola Pepe, ¿como estás?
            when "Alicia"
                p Que tal, Alicia
            default
                p Hola #{name}!

        //- Iteraciones
        //- each VAL,[KEY] in OBJ - VAL -> variable, OBJ-> objeto
        //-aOpcion antes era val, valida igual. suele ponerse en singular por que es el dato que coje por vuelta de aOpciones

        - let aSecciones = ['Inicio', 'Porfolio', 'Clientes', 'About']
        nav
            ul
                each seccion in aSecciones
                    li: a(href="#"+seccion.toLowerCase())= seccion

        - let aSections = ['Home', 'Porfolio', 'Clients', 'About']
        nav
            ul
                - let i = 0
                while i < aSections.length
                    li: a(href="#"+aSections[i].toLowerCase())= aSections[i]
                    -i++                      

        //-let aOpciones = [ {nombre: 'C#', codigo:'37'}, {nombre: 'Java', codigo:'84'}, {nombre: 'JavaScript', codigo:'13'}] 
        -let aOpciones = cursos
        -let optName = 'cursos'
        form(action="")
            label(for=optName) Selecciona un curso
            select(name=optName id=optName)
                each opcion in aOpciones
                    option(value=opcion.codigo)= opcion.nombre
                button(type="submit") Enviar

        //- Iteraciones EACH
        //- El tope es aSections.length
        //- [i] es lo que aumenta cada vuelta
        //- -i++ ---> cada vuelta añado
        -let aSections = ['Home', 'Porfolio', 'Clients', 'About']
        nav
            ul
                - let i = 0
                while i < aSections.length 
                    li: a(href="#"+aSections[i].toLowerCase())= aSections[i]
                    -i++