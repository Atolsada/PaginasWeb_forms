include ./mixins.pug

<!DOCTYPE html>
html(lang=idioma)
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="./css/style.css")
        title=titulo
    body
        header
            h1=titulo
            block header
                img(src="./assets/main.jpg", alt="assets")
        nav
            +menu(aSecciones)
        main
        block main
        footer
            +menuSocial(aSocial)
            address #{autor} - #{autorMail}
            small &copy; #{empresa}, #{localidad}
        